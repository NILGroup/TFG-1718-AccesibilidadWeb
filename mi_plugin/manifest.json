{
  "manifest_version": 2,
  "name": "Apoyo a la navegación",
  "description": "Herramienta de apoyo a la navegación web para personas con discapacidad",
  "version": "1.0",
  "author": "Lorena Jiménez",
  "icons":{
    "16": "img/help.png",
    "48": "img/help.png",
    "128": "img/help.png"
  },
  "browser_action":{
    "default_icon": "img/help.png",
    "default_popup": "popup.html",
    "default_title": "Selecciona los servicios que quieres cargar."
  },
  "content_scripts":[
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["style.css"],
      "js": [
        "js/jquery-3.3.1.min.js",
        "js/services/option-selected.js",
        "js/toolbar/createCustomToolbar.js",
        "js/selectionServicesMenu/selectCheckBox.js",
        "js/selectionServicesMenu/creatingServicesMenu.js",
        "js/selectionServicesMenu/loadToolbarMenu.js"
       ]
    }
  ],
  "content_security_policy":"script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "web_accessible_resources":[
    "toolbar.html",
    "style.css",
    "img/searchIcon.png"
  ],
  "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "storage"
    ]
}
