{
  "manifest_version": 2,
  "name": "Apoyo a la navegación",
  "description": "Herramienta de apoyo a la navegación web para personas con discapacidad",
  "version": "1.0",

  "browser_action":{
    "default_icon": "img/icon.png"
  },
  "icons":{
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "content_scripts":[
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["style.css"],
      "js": ["js/jquery-3.3.1.min.js","js/toolbar/add-toolbar.js", "js/toolbar/option-selected.js"]
    }
  ],
  "web_accessible_resources":[
    "toolbar.html",
    "style.css"
  ]
}
